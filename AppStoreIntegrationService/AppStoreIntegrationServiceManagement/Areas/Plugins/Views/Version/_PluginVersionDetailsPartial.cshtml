@model ExtendedPluginVersion<string>

<div id="pluginVersionContainer">
    <input hidden asp-for="IsPrivatePlugin" value="true" />
    <input hidden asp-for="VersionId" />
    <h6 class="mb-3 ml-lg-3">@Model.VersionName</h6>
    <div id="versionDetails" class="m-0 ml-lg-3">
        <input hidden asp-for="VersionName" />
        <input hidden asp-for="TechnicalRequirements" />
        <input hidden asp-for="SelectedProduct.Id" />
        <input hidden asp-for="SelectedProduct.ProductName" />
        <input hidden asp-for="SelectedProduct.ParentProductID" />
        <input hidden asp-for="SelectedProduct.MinimumStudioVersion" />

        @for (int i = 0; i < Model.SupportedProducts?.Count; i++)
        {
            <input hidden asp-for="SupportedProducts[i]" />
        }

        <div class="d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 align-self-center form-label" asp-for="VersionNumber">Version Number <span class="text-danger">*</span></label>
            <div class="w-100">
                <input asp-for="VersionNumber" class="form-control" />
                <span asp-validation-for="VersionNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 align-self-center form-label" asp-for="MinimumRequiredVersionOfStudio">Minimum Studio Version </label>
            <div class="w-100">
                <input asp-for="MinimumRequiredVersionOfStudio" class="form-control" />
                <span asp-validation-for="MinimumRequiredVersionOfStudio" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 align-self-center form-label" asp-for="MaximumRequiredVersionOfStudio">Maximum Studio Version </label>
            <div class="w-100">
                <input asp-for="MaximumRequiredVersionOfStudio" class="form-control" />
                <span asp-validation-for="MaximumRequiredVersionOfStudio" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 align-self-center" asp-for="VersionDownloadUrl">Download URL <span class="text-danger">*</span></label>
            <div class="w-100">
                <input asp-for="VersionDownloadUrl" class="form-control" oninput="ManageChecksum('@Model.VersionDownloadUrl', '@Model.FileHash')" />
                <span asp-validation-for="VersionDownloadUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-check d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 form-check-label" asp-for="IsNavigationLink">Is navigation link</label>
            <input asp-for="IsNavigationLink" type="checkbox" class="m-0 align-self-center p-3" />
        </div>
        <div class="form-check d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 form-check-label" asp-for="AppHasStudioPluginInstaller">Has plugin extension</label>
            <input asp-for="AppHasStudioPluginInstaller" type="checkbox" class="m-0 align-self-center p-3" />
        </div>
        <div class="mb-3 d-flex align-content-center col-12 p-0">
            <label class="col-4 m-0 align-self-center form-label" asp-for="FileHash">Checksum </label>
            <div class="d-flex flex-column w-100">
                <div class="input-group">
                    <button class="btn btn-secondary" type="button" onclick="GenerateChecksum()">
                        <span class="spinner-border spinner-border-sm" hidden role="status" aria-hidden="true"></span>
                        Generate
                    </button>
                    <input asp-for="FileHash" class="form-control ignore" />
                </div>
                <span asp-validation-for="FileHash" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex align-content-center col-12 p-0">
            <label class="col-4 m-0 align-self-center form-label" asp-for="SelectedProductId">Product</label>
            <select asp-for="SelectedProductId" asp-items="@Model.SupportedProductsListItems" class="form-select"></select>
        </div>
    </div>
</div>

<div class="modal fade" id="manifestCompareModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Manifest comparison</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5>Upload manifest</h5>
                <div class="d-flex">
                    <input asp-for="ManifestFile" type="file" class="form-control me-2" />
                    <button type="button" onclick="javascript: CompareWithManifest()" class="btn btn-secondary">Compare</button>
                </div>
                <span asp-validation-for="ManifestFile" class="text-danger"></span>
                <div id="manifestComparisonLog" class="mt-2"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>