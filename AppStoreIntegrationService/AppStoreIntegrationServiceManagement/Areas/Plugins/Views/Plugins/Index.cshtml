@model List<PrivatePlugin>
@{
    ViewData["Title"] = "ConfigTool";
}
<div id="toolsMenu" class="row justify-content-between px-3">
    <div id="filterSearch" class="filter-search col-8 p-0">
        <select id="status" class="filter-search-select" onchange="javscript: AddFilter('status')">
            <option value="2" hidden selected>Status</option>
            <option value="0">Active</option>
            <option value="1">Inactive</option>
        </select>
        <input id="search" class="filter-search-text" autocomplete="off" placeholder="Search plugin" onkeydown="javascript: AddFilterOnEnterKey()">
        <i id="applyFilters" class="fas fa-search filter-search-submit" onclick="javascript: AddFilter('search')"></i>
    </div>
    <div id="newAppButton" class="col-4 d-flex justify-content-end p-0">
        <a class="btn pa-admin-success-btn" asp-controller="Plugins" asp-action="New">
            <i class="fas fa-puzzle-piece"></i>
            New app
        </a>
    </div>
</div>

<div id="activeFilters" class="row px-3 pt-3">
    @{
        var reqQuery = Context.Request.Query;
        var statusExists = reqQuery.TryGetValue("status", out var statusValue);
        var searchExists = reqQuery.TryGetValue("search", out var searchValue);
    }
    <label id="clearAllFilter" class="delete-filter me-1 @Html.Raw(statusExists && searchExists ? "delete-filter-active" : "")">
        <i class="fas fa-times-circle cursor-pointer delete-filter-img" onclick="javascript: RedirectTo('/Plugins','/plugins')"></i>
        <label class="filter-current-label">Clear all</label>
    </label>
    <label id="clearStatusFilter" class="delete-filter me-1 @Html.Raw(statusExists ? "delete-filter-active" : "")">
        <i class="fas fa-times-circle cursor-pointer delete-filter-img" onclick="javascript: DeleteFilter('status')"></i>
        <label id="labelStatusFilter" class="filter-current-label">@Html.Raw(statusValue == "0" ? "Active" : statusValue == "1" ? "Inactive" : "All")</label>
    </label>
    <label id="clearSearchFilter" class="delete-filter me-1 @Html.Raw(searchExists ? "delete-filter-active" : "")">
        <i class="fas fa-times-circle cursor-pointer delete-filter-img" onclick="javascript: DeleteFilter('search')"></i>
        <label id="labelSearchFilter" class="filter-current-label">@searchValue</label>
    </label>
</div>

<div id="configToolPage">
    <div class="row justify-content-start">
        @foreach (var plugin in Model)
        {
            <div class="col-12 col-md-4 col-lg-3 p-3 d-flex justify-content-center">
                <div class="card card-item @Html.Raw(@plugin.Inactive ? "card-item-inactive" : "")">
                    <img class="img-item" src="@plugin.IconUrl" asp-append-version="true">
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <label class="text-wrap plugin-name">@plugin.Name</label>
                    </div>
                    <div class="d-flex align-items-end flex-column p-3">
                        <label class="card-status">@Html.Raw(@plugin.Inactive ? "Inactive" : "")</label>
                        <div>
                            <a class="focus-transparent me-3" asp-controller="Plugins" asp-action="Edit" asp-route-Id="@plugin.Id"><i class="fas fa-pen-alt text-secondary"></i></a>
                            <btn class="cursor-pointer delete-plugin-btn" id="@plugin.Id"><i class="far fa-trash-alt text-danger cursor-pointer"></i></btn>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="addModalContainer"></div>
    <div id="modalContainer"></div>
</div>

<div class="modal fade" id="confirmDeletePlugin" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <span class="plugin-name-placeholder"></span>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" id="confirmDeletePluginButton" data-bs-dismiss="modal" class="btn pa-admin-success-btn">Yes</button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/PluginsScript.js"></script>
<script src="~/js/FilterScript.js"></script>
