@model List<ExtendedPluginVersion>

<div id="selectedVersion">
    @if (Model != null)
    {
        @for (int i = 0; i < @Model.Count; i++)
        {
            <input class="ignore" hidden asp-for="@Model[i].VersionId" />
            <input class="ignore" hidden asp-for="@Model[i].VersionNumber" />
            <input class="ignore" hidden asp-for="@Model[i].FileHash" />
            <input class="ignore" hidden asp-for="@Model[i].IsNewVersion" />
            <input class="ignore" hidden asp-for="@Model[i].MinimumRequiredVersionOfStudio" />
            <input class="ignore" hidden asp-for="@Model[i].MaximumRequiredVersionOfStudio" />
            <input class="ignore" hidden asp-for="@Model[i].AppHasStudioPluginInstaller" />
            <input class="ignore" hidden asp-for="@Model[i].TechnicalRequirements" />
            <input class="ignore" hidden asp-for="@Model[i].IsNavigationLink" />
            <input class="ignore" hidden asp-for="@Model[i].VersionDownloadUrl" />
            <input class="ignore" hidden asp-for="@Model[i].IsPrivatePlugin" />

            for (int j = 0; j < Model[i].SupportedProducts.Count; j++)
            {
                <input class="ignore" hidden asp-for="@Model[i].SupportedProducts[j]" />
            }

            <input class="ignore" hidden asp-for="@Model[i].VersionName" />
            <div class="d-flex justify-content-between">
                <label class="cursor-pointer version-name-label" onclick="ShowVersionDetails('@Model[i].VersionId')">@Model[i].VersionNumber</label>
                @if (Model.Count > 1)
                {
                    <i class="far fa-trash-alt cursor-pointer" role="button" aria-label="Delete version" id="@Model[i].VersionId"></i>
                }
            </div>
        }
    }
</div>