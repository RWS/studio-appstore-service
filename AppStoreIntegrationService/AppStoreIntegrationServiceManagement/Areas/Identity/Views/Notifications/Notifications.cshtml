@model NotificationSettingsModel
@{
    ViewData["Title"] = "Settings";
    ViewData["ActivePage"] = ManageNavPages.Notifications;
}

<h1 class="fs1-inherit">Settings</h1>
<h2 class="fs2-inherit">Change site settings</h2>
<hr class="w-100">
<div class="row d-flex" id="settings-page">
    <partial name="_ProfileNav" /> 
    <div class="col-12 col-md-9" id="settings-details-container">
        <p class="fw-bold fs4-inherit mb-2">Notifications</p>
        <div class="settings-details">
            <div>
                <form method="post" id="form">
                    <div class="form-check form-switch">
                        <label class="form-check-label" asp-for="EmailNotificationsEnabled">Enable email notifications</label>
                        <input class="form-check-input" type="checkbox" asp-for="EmailNotificationsEnabled" onchange="SwitchNotifications()">
                    </div>
                    <div class="form-check form-switch">
                        <label class="form-check-label" asp-for="PushNotificationsEnabled">Enable push notifications</label>
                        <input class="form-check-input" type="checkbox" asp-for="PushNotificationsEnabled" onchange="SwitchNotifications()">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/ImportPluginsScript.js"></script>