@model AgreementConsent
@{
    ViewData["Title"] = "Agreement";
}

<partial name="_StatusMessage" model="@TempData["StatusMessage"]" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-11 col-md-8 col-lg-6 rounded p-5 bg-light">
            <section>
                <form asp-controller="Authentication" asp-action="ConsentAgreement" onsubmit="return false" id="form" method="post">
                    <h3 class="text-start">Tech partner agreement</h3>
                    <hr />
                    <div class="mb-3">
                        <input hidden asp-for="RedirectUrl"/> 
                        <label>
                            <input asp-for="IsAgreementAccepted" type="checkbox" class="form-check-input" />
                            Accept tech parter agreement
                        </label>
                    </div>
                    <div class="mb-3">
                        <button class="btn pa-admin-success-btn w-100" onclick="ConsentAgreement()">
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" hidden></span>
                            Submit
                        </button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

<script src="~/js/ManageUsersScript.js"></script>