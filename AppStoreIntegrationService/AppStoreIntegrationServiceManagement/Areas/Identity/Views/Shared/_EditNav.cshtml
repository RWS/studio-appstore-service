@model string
@{
    var controller = ViewContext.RouteData.Values["controller"];
    var action = ViewContext.RouteData.Values["action"];
}

<div class="col-12 col-md-3">
    <ul class="nav nav-pills flex-column" id="profile-navbar">
        <li class="nav-item"><a class="nav-link option @ManageNavPages.ProfileNavClass(ViewContext)" href="#" onclick="javascript: RedirectTo('/Identity/Account/Profile/@Model', '@controller', '@action')">Edit</a></li>
        <li class="nav-item"><a class="nav-link option @ManageNavPages.ChangePasswordNavClass(ViewContext)" href="#" onclick="javascript: RedirectTo('/Identity/Account/ChangePassword/@Model', '@controller', '@action')">Reset password</a></li>
        <li class="nav-item"><a class="nav-link option @ManageNavPages.ManageNavClass(ViewContext)" href="#" onclick="javascript: RedirectTo('/Identity/Account/Users', '@controller', '@action')">Users</a></li>
    </ul>
</div>
