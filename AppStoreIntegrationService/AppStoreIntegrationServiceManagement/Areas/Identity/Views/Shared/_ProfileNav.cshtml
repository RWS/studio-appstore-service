@inherits CustomRazorPage<object>

<div class="col-12 col-md-3">
    <ul class="nav nav-pills flex-column" id="profile-navbar">
        <li class="nav-item"><a class="nav-link cursor-pointer option @ManageNavPages.ProfileNavClass(ViewContext)" onclick="EnsurePreserved(() => { window.location.href = '/Identity/Account/Profile' })">Profile</a></li>

        @if (ExtendedUser.IsInRole("SystemAdministrator") || ExtendedUser.IsInRole("Administrator"))
        {
            <li class="nav-item"><a class="nav-link cursor-pointer option @ManageNavPages.ManageNavClass(ViewContext)" onclick="EnsurePreserved(() => { window.location.href = '/Identity/Account/Users/Assigned' })">Users</a></li>
            <li class="nav-item"><a class="nav-link cursor-pointer option @ManageNavPages.RegisterNavClass(ViewContext)" onclick="EnsurePreserved(() => { window.location.href = '/Identity/Account/Register' })">Register</a></li>
        }

        <li class="nav-item"><a class="nav-link cursor-pointer option @ManageNavPages.AccountsNavClass(ViewContext)" onclick="EnsurePreserved(() => { window.location.href = '/Identity/Account/Accounts' })">Accounts</a></li>
        <li class="nav-item"><a class="nav-link cursor-pointer option @ManageNavPages.NotificationsNavClass(ViewContext)" onclick="EnsurePreserved(() => { window.location.href = '/Identity/Account/Notifications' })">Notifications</a></li>
        <li class="nav-item"><a class="nav-link cursor-pointer option @ManageNavPages.AccessTokenNavClass(ViewContext)" onclick="EnsurePreserved(() => { window.location.href = '/Identity/Account/AccessToken' })">Access token</a></li>
    </ul>
</div>

