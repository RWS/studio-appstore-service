@model List<UserInfoModel>
@{
    ViewData["Title"] = "Manage";
    ViewData["ActivePage"] = ManageNavPages.Manage;
    var modal = new ModalMessage 
    { 
        ModalType = ModalType.ConfirmationMessage,
        Title = "Confirmation"
    };
}

<partial name="_StatusMessage" model="@TempData["StatusMessage"]" />
<h2>@ViewData["Title"]</h2>
<h4>Manage users</h4>
<hr class="w-100">
<div class="row justify-content-center">
    <div id="alertContainer"></div>
    <partial name="_ProfileNav" />
    <div class="col-12 col-md-9">
        <h4>Users</h4>
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Username</th>
                    <th>Role</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="text-center">
                        <td>@user.Name</td>
                        <td>@user.Role</td>
                        @if (user.Name != "Admin")
                        {
                            <td colspan="@(user.IsCurrentUser ? "2" : "1")">
                                <a asp-controller="Account" asp-action="Profile" asp-route-id="@user.Id">
                                    <i class="fa fa-pen-alt text-secondary cursor-pointer"></i>
                                </a>
                            </td>

                            @if (!user.IsCurrentUser)
                            {
                                <td><i id="@user.Id" class="fa fa-trash-alt text-danger cursor-pointer delete-user-btn"></i></td>
                            }
                        }
                        else
                        {
                            <td colspan="2"><i class="fa fa-info-circle text-secondary cursor-pointer" data-bs-toggle="tooltip" data-bs-placement="top" title="Built in Admin not editable!"></i> </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="_ModalPartial" model="@modal" />

<script src="~/js/ManageUsersScript.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





