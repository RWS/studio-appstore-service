@model Account

<tr class="table-row d-flex flex-column d-lg-table-row">
    <td class="editable-field order-first">
        <input hidden asp-for="@Model.Id" />
        <input class="form-control form-control-sm text-center text-lg-start fs-inherit" asp-for="@Model.Name" placeholder="CategoryName" autofocus />
    </td>
    <td class="align-middle text-center"><i onclick="table.Save()" title="Save new category" class="fa fa-check-circle cursor-pointer align-middle"></i></td>
    <td class="align-middle text-center"><i onclick="EnsurePreserved(() => table.Discard())" title="Discard new category" class="fa fa-times-circle text-danger cursor-pointer align-middle"></i></td>
</tr>