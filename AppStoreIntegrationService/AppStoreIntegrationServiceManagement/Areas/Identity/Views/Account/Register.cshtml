@model RegisterModel
@{
    ViewData["Title"] = "Manage";
    ViewData["ActivePage"] = ManageNavPages.Register;
}

<partial name="_StatusMessage" model="@TempData["StatusMessage"]" />
<h1 class="fs1-inherit">@ViewData["Title"]</h1>
<h2 class="fs2-inherit">Manage users</h2>
<hr class="w-100">
<div class="row justify-content-center">
    <partial name="_ProfileNav" />
    <div class="col-12 col-md-9">
        <p class="fw-bold fs4-inherit">Add new user</p>
        <form asp-controller="Account" asp-action="PostRegister" method="post" id="form">
            <input hidden name="Page" value="@Page.Register" />
            <div class="mb-3">
                <label asp-for="Input.UserName" class="form-label">Username</label>
                <div class="input-group">
                    <input asp-for="Input.UserName" class="form-control fs-inherit border-end-0" oninput="HideUserDetails()" />
                    <a class="btn pa-admin-success-btn text-nowrap" onclick="CheckUserExistance()">
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" hidden></span>
                        Check user
                    </a>
                </div>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                <span id="userCheckMessage"></span>
            </div>
            <div class="d-none">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control fs-inherit" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control fs-inherit" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control fs-inherit" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.UserRole" class="form-label"></label>
                    @if (User.IsInRole("Administrator"))
                    {
                        <select class="fs-inherit pa-admin-select w-100" asp-for="Input.UserRole">
                            <option value="StandardUser">Standard</option>
                            <option value="Administrator">Administrator</option>
                            <option value="Developer">Developer</option>
                        </select>
                    }

                    @if (User.IsInRole("Developer"))
                    {
                        <input asp-for="Input.UserRole" readonly value="Developer" class="form-control fs-inherit" />
                    }

                    @if (User.IsInRole("StandardUser"))
                    {
                        <input asp-for="Input.UserRole" readonly value="StandardUser" class="form-control fs-inherit" />
                    }
                </div>
                @if (User.IsInRole("Developer") || User.IsInRole("StandardUser"))
                {
                    <div class="form-check">
                        <input asp-for="Input.AssignToAccount" type="checkbox" checked onclick="return false" class="form-check-input" />
                        <label asp-for="Input.AssignToAccount" class="form-label">Assign user to your account</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Input.HasFullAccess" type="checkbox" class="form-check-input" />
                        <label asp-for="Input.HasFullAccess" class="form-label">Grant full access to your account</label>
                    </div>
                }
                else
                {
                    <div class="form-check">
                        <input asp-for="Input.AssignToAccount" type="checkbox" class="form-check-input" onchange="ToggleAccessCheckbox()" />
                        <label asp-for="Input.AssignToAccount" class="form-label">Assign user to your account</label>
                    </div>
                    <div class="form-check d-none">
                        <input asp-for="Input.HasFullAccess" type="checkbox" class="form-check-input" />
                        <label asp-for="Input.HasFullAccess" class="form-label">Grant full access to your account</label>
                    </div>
                }
                <button type="submit" class="btn pa-admin-success-btn fs-inherit">Register</button>
            </div>
        </form>
    </div>
</div>

<div id="modalContainer"></div>

<script src="~/js/ManageUsersScript.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

