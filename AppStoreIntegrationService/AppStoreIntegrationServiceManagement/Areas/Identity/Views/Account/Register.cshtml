@model RegisterModel
@{
    ViewData["Title"] = "Add new user";
    ViewData["ActivePage"] = ManageNavPages.Register;
}

<h4>@ViewData["Title"]</h4>
<hr class="w-100">
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <partial name="_ManageNav"/>
    <div class="col-12 col-md-9">
        <form asp-controller="Account" asp-action="PostRegister" method="post">
            <div class="mb-3">
                <label asp-for="Input.UserName" class="form-label"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.UserRole" class="form-check-label"></label>
                <div class="form-check">
                    <input checked type="radio" asp-for="Input.UserRole" value="StandardUser" class="form-check-input" />
                    Standard
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="Input.UserRole" value="Administrator" class="form-check-input" />
                    Administrator
                </div>
            </div>
            <button type="submit" class="btn pa-admin-success-btn">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

