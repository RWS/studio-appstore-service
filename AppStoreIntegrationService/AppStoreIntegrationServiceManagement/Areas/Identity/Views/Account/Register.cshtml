@model RegisterModel
@{
    ViewData["Title"] = "Manage";
    ViewData["ActivePage"] = ManageNavPages.Register;
}

<partial name="_StatusMessage" model="@TempData["StatusMessage"]" />
<h2>@ViewData["Title"]</h2>
<h4>Manage users</h4>
<hr class="w-100">
<div class="row justify-content-center">
    <partial name="_ProfileNav" />
    <div class="col-12 col-md-9">
        <h4>Add new user</h4>
        <form asp-controller="Account" asp-action="PostRegister" method="post">
            <div class="mb-3">
                <label asp-for="Input.UserName" class="form-label"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.UserRole" class="form-label"></label>
                <div class="form-check p-0">
                    <input checked type="radio" asp-for="Input.UserRole" value="StandardUser" />
                    Standard
                </div>
                <div class="form-check p-0">
                    <input type="radio" asp-for="Input.UserRole" value="Administrator" />
                    Administrator
                </div>
            </div>
            <button type="submit" class="btn pa-admin-success-btn">Register</button>
        </form>
    </div>
</div>
<div id="modalContainer"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

