@model RegisterModel
@{
    ViewData["Title"] = "Manage";
    ViewData["ActivePage"] = ManageNavPages.Register;
}

<partial name="_StatusMessage" model="@TempData["StatusMessage"]" />
<h1 class="fs1-inherit">@ViewData["Title"]</h1>
<h2 class="fs2-inherit">Manage users</h2>
<hr class="w-100">
<div class="row justify-content-center">
    <partial name="_ProfileNav" />
    <div class="col-12 col-md-9">
        <p class="fw-bold fs4-inherit">Add new user</p>
        <form asp-controller="Account" asp-action="PostRegister" method="post" id="form">
            <input hidden name="Page" value="@Page.Register" />
            <div class="mb-3">
                <label asp-for="Input.UserName" class="form-label"></label>
                <input asp-for="Input.UserName" class="form-control fs-inherit" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control fs-inherit" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control fs-inherit" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control fs-inherit" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.UserRole" class="form-label"></label>
                <select class="fs-inherit pa-admin-select w-100" asp-for="Input.UserRole">
                    <option value="StandardUser" selected>Standard</option>
                    <option value="Administrator">Administrator</option>
                    <option value="Developer">Developer</option>
                </select>
            </div>
            <button type="submit" class="btn pa-admin-success-btn fs-inherit">Register</button>
        </form>
    </div>
</div>
<div id="modalContainer"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

