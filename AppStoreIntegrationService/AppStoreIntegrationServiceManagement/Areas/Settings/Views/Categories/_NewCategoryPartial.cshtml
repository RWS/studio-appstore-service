@model CategoryDetails

<input name="Page" value="@Page.Categories" hidden />

<tr class="table-row d-flex flex-column d-lg-table-row">
    <td class="align-middle d-none d-lg-table-cell">
        <p class="m-0">@Model.Id</p>
        <input hidden asp-for="@Model.Id" />
    </td>
    <td class="editable-field order-first">
        <input class="form-control form-control-sm text-center text-lg-start fs-inherit" asp-for="@Model.Name" placeholder="CategoryName" autofocus />
        <span asp-validation-for="Name" class="text-danger"></span>
    </td>
    <td class="align-middle text-center">
        <i onclick="table.Save()" role="tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Save" class="fa fa-check-circle cursor-pointer align-middle"></i>
    </td>
    <td class="align-middle text-center">
        <i onclick="EnsurePreserved(() => table.Discard())" role="tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Discard" class="fa fa-times-circle text-danger cursor-pointer align-middle"></i>
    </td>
</tr>