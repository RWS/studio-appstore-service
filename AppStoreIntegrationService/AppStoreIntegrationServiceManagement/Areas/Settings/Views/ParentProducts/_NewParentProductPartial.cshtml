@model ParentProduct

<tr class="table-row d-flex flex-column d-lg-table-row" id="newDataRow">
    <td>
        <p>@Model.ParentId</p>
        <input hidden asp-for="@Model.ParentId" />
    </td>
    <td class="editable-field order-first"><input class="form-control form-control-sm text-center text-lg-start" asp-for="@Model.ParentProductName" placeholder="ProductName" autofocus /></td>
    <td class="icon-cell text-center"><i onclick="parentTable.SaveNewRowData()" title="Save new parent product" class="fa fa-check-circle text-success cursor-pointer align-middle"></i></td>
    <td class="icon-cell text-center"><i onclick="parentTable.CloseNewRowForm(function() { return })" title="Discard changes for parent product" class="fa fa-times-circle text-danger cursor-pointer align-middle"></i></td>
</tr>
