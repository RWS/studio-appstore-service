@model SupportedProductDetails

<tr class="table-row d-flex flex-column d-sm-table-row" id="newDataRow">
    <td class="editable-field d-sm-table-cell d-sm-none d-lg-table-cell"><input class="form-control form-control-sm" asp-for="@Model.Id" placeholder="Id" /></td>
    <td class="editable-field order-first"><input class="form-control form-control-sm" asp-for="@Model.ProductName" placeholder="ProductName" /></td>
    <td class="editable-field"><input class="form-control form-control-sm" asp-for="@Model.MinimumStudioVersion" placeholder="ProductVersion" /></td>
    <td class="editable-field d-sm-table-cell d-sm-none d-lg-table-cell"><input class="form-control form-control-sm" asp-for="@Model.ParentProductID" placeholder="ParentId" /></td>
    <td class="editable-field text-center align-middle"><input class="form-check-input" asp-for="@Model.IsDefault" /></td>
    <td class="icon-cell text-center"><i onclick="SaveNewRowData()" class="fa fa-check-circle text-success cursor-pointer align-middle"></i></td>
    <td class="icon-cell text-center"><i onclick="CloseNewRowForm(function() { return })" class="fa fa-times-circle text-danger cursor-pointer align-middle"></i></td>
</tr>