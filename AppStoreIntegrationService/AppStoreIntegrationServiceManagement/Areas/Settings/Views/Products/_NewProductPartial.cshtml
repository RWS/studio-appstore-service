@model ExtendedProductDetails

<tr class="table-row d-flex flex-column d-lg-table-row" id="newDataRow">
    <td>
        <p>@Model.Id</p>
        <input hidden asp-for="@Model.Id" />
    </td>
    <td class="editable-field order-first"><input class="form-control form-control-sm text-center text-lg-start fs-inherit" asp-for="@Model.ProductName" placeholder="ProductName" autofocus /></td>
    <td class="editable-field"><input class="form-control form-control-sm text-center text-lg-start fs-inherit" asp-for="@Model.MinimumStudioVersion" placeholder="ProductVersion" /></td>
    <td class="editable-field"><select asp-for="ParentProductID" asp-items="@Model.ParentProductsListItems" class="form-select form-select-sm fs-inherit"></select></td>
    <td class="editable-field text-center align-middle"><input class="form-check-input fs-inherit" asp-for="@Model.IsLegacy" onchange="table.Change()" aria-label="@Model.IsLegacy" /></td>
    <td class="icon-cell text-center"><i onclick="table.SaveNewRowData()" title="Save new product" class="fa fa-check-circle text-success cursor-pointer align-middle"></i></td>
    <td class="icon-cell text-center"><i onclick="table.CloseNewRowForm(function() { return })" title="Discard new product" class="fa fa-times-circle text-danger cursor-pointer align-middle"></i></td>
</tr>