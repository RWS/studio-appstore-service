@model List<ExtendedProductDetails>

@for (int i = 0; i < Model.Count; i++)
{
    <tr class="table-row d-flex flex-column d-lg-table-row" id="itemsRow">
        <td class="d-none d-lg-table-cell">
            <div class="input-group">
                <span class="input-group-text text-center w-50 d-inline d-lg-none border-0">Id</span>
                <input class="form-control form-control-sm entry entry-nofocus rounded text-center text-lg-start" hidden="hidden" onfocusout="table.FocusOut()" asp-for="@Model[i].Id">
                <p class="m-0 section w-100 align-self-center text-center text-lg-start" ondblclick="table.EditCell()">@Model[i].Id</p>
            </div>
        </td>
        <td class="editable-field order-first">
            <input class="form-control form-control-sm entry entry-nofocus text-center text-lg-start autofocus fs-inherit" aria-label="@Model[i].ProductName" hidden="hidden" onfocusout="table.FocusOut()" asp-for="@Model[i].ProductName">
            <p class="m-0 section align-self-center text-center text-lg-start" ondblclick="table.EditCell()" onclick="Collapse(this)">@Model[i].ProductName</p>
        </td>
        <td class="editable-field d-none d-lg-table-cell">
            <div class="input-group">
                <span class="input-group-text text-center w-50 d-inline d-lg-none border-0">Version</span>
                <input class="form-control form-control-sm entry entry-nofocus rounded text-center text-lg-start fs-inherit" aria-label="@Model[i].MinimumStudioVersion" hidden="hidden" onfocusout="table.FocusOut()" asp-for="@Model[i].MinimumStudioVersion">
                <p class="m-0 section w-100 align-self-center text-center text-lg-start" ondblclick="table.EditCell()">@Model[i].MinimumStudioVersion</p>
            </div>
        </td>
        <td class="editable-field d-none d-lg-table-cell">
            <div class="input-group">
                <span class="input-group-text text-center w-50 d-inline d-lg-none border-0">ParentId</span>
                <select hidden="hidden" asp-for="@Model[i].ParentProductID" asp-items="@Model[i].ParentProductsListItems" class="form-select-sm rounded entry fs-inherit pa-admin-select w-100" onchange="table.ChangeParentProduct()"></select>
                <p class="m-0 section w-100 align-self-center text-center text-lg-start" ondblclick="table.EditCell()">@Model[i].ParentProductID</p>
            </div>
        </td>
        <td class="editable-field d-none d-lg-table-cell align-middle">
            <div class="input-group text-center">
                <span class="input-group-text text-center w-50 d-inline d-lg-none border-0">IsLegacy</span>
                <input class="entry entry-nofocus m-auto rounded fs-inherit" hidden="hidden" onfocusout="table.FocusOut()" aria-label="@Model[i].IsLegacy" onchange="table.Change()" asp-for="@Model[i].IsLegacy">
                <p class="m-0 section w-100 align-self-center" ondblclick="table.EditCell()"><i class="fa @(Model[i].IsLegacy ? "fa-check-circle" : "fa-times-circle")"></i></p>
            </div>
        </td>
        <td class="icon-cell text-center align-middle d-none d-lg-table-cell">
            <i class="fa fa-pen-alt cursor-pointer" title="Edit @Model[i].ProductName" onclick="table.EditRow()"></i>
            <i class="fa fa-check-circle cursor-pointer d-none" title="Apply changes for @Model[i].ProductName" onclick="table.ApplyChanges()"></i>
        </td>
        <td class="icon-cell text-center align-middle d-none d-lg-table-cell">
            <i id="@Model[i].Id" class="fa fa-trash-alt row-eraser cursor-pointer" title="Delete @Model[i].ProductName" onclick="table.DeleteRow()"></i>
            <i class="fa fa-times-circle cursor-pointer d-none" title="Discard changes for @Model[i].ProductName" onclick="table.DiscardChanges()"></i>
        </td>
    </tr>
}