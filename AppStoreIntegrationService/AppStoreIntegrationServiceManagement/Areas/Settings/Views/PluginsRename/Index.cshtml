@model PluginsRenameModel
@{
    ViewData["Title"] = "Settings";
    ViewData["ActivePage"] = ManageSettingsNav.PluginsRename;
}
<partial name="_StatusMessage" model="@TempData["StatusMessage"]"/>
<div id="statusMessageContainer"></div>
<h2>Settings</h2>
<h4>Change site settings</h4>
<hr class="w-100">
<div class="row d-flex" id="settings-page">
    <partial name="_SettingsNavPartial" />
    <div class="col-12 col-md-9" id="namesMapping">
        <div class="settings-details">
            <h4>Renamed plugins</h4>
            <form method="post" id="form" onsubmit="return false">
                <table class="table table-bordered" id="mappingsTable">
                    <thead>
                        <tr class="align-middle d-none d-lg-table-row">
                            <th>Id</th>
                            <th>Old Name</th>
                            <th>New Name</th>
                            <td class="icon-cell text-center"><i onclick="AddNewRow()" class="fa fa-plus-circle text-success cursor-pointer"></i></td>
                            <td class="icon-cell"></td>
                        </tr>
                    </thead>
                    <tbody class="table-body">
                        <partial name="_NamesMappingPartial" model="@Model.NamesMapping" />
                    </tbody>
                    <tbody id="newRowPartial">
                    </tbody>
                </table>
                <button type="button" onclick="AddNewRow()" class="btn pa-admin-success-btn">Add new</button>
            </form>
        </div>
    </div>
</div>
<div id="modalContainer"></div>
<partial name="_ModalPartial" model="@new ModalMessage()"/>

<script src="~/js/TableCRUD.js"></script>
<script src="~/js/PluginsRenameScript.js"></script>

