@model List<NameMapping>

@for (int i = 0; i < Model.Count; i++)
{
    <tr class="table-row d-flex flex-column d-lg-table-row" id="itemsRow">
        <td class="d-table-cell d-lg-none">
            <p class="m-0 fw-bold text-center" onclick="Collapse(this)">@Model[i].NewName</p>
        </td>
        <td class="d-none d-lg-table-cell">
            <div class="input-group">
                <span class="input-group-text text-center w-50 d-inline d-lg-none border-0">Id</span>
                <input class="form-control form-control-sm entry entry-nofocus rounded text-center text-lg-start" hidden="hidden" asp-for="@Model[i].Id">
                <p class="m-0 section w-100 align-self-center text-center text-lg-start">@Model[i].Id</p>
            </div>
        </td>
        <td class="editable-field d-none d-lg-table-cell">
            <div class="input-group">
                <span class="input-group-text text-center w-50 d-inline d-lg-none border-0">OldName</span>
                <input class="form-control form-control-sm entry entry-nofocus rounded text-center text-lg-start autofocus" aria-label="@Model[i].OldName" onfocusout="table.FocusOut()" hidden="hidden" asp-for="@Model[i].OldName">
                <p class="m-0 section w-100 align-self-center text-center text-lg-start" ondblclick="table.EditCell()">@Model[i].OldName</p>
            </div>
        </td>
        <td class="editable-field d-none d-lg-table-cell">
            <div class="input-group">
                <span class="input-group-text text-center w-50 d-inline d-lg-none border-0">NewName</span>
                <input class="form-control form-control-sm entry entry-nofocus rounded text-center text-lg-start" aria-label="@Model[i].NewName" onfocusout="table.FocusOut()" hidden="hidden" asp-for="@Model[i].NewName">
                <p class="m-0 section w-100 align-self-center text-center text-lg-start" ondblclick="table.EditCell()">@Model[i].NewName</p>
            </div>
        </td>
        <td class="icon-cell text-center align-middle d-none d-lg-table-cell">
            <i class="fa fa-pen-alt text-secondary cursor-pointer" title="Edit @Model[i].NewName" onclick="table.EditRow()"></i>
            <i class="fa fa-check-circle text-success cursor-pointer d-none" title="Save changes for @Model[i].NewName" onclick="table.ApplyChanges()"></i>
        </td>
        <td class="icon-cell text-center align-middle d-none d-lg-table-cell">
            <i id="@Model[i].Id" class="fa fa-trash-alt row-eraser text-danger cursor-pointer" title="Delete @Model[i].NewName" onclick="table.DeleteRow()"></i>
            <i class="fa fa-times-circle text-danger cursor-pointer d-none" title="Discard changes for @Model[i].NewName" onclick="table.DiscardChanges()"></i>
        </td>
    </tr>
}