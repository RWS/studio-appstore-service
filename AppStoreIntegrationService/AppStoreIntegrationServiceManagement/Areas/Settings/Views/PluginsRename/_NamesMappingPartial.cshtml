@model List<NameMapping>

@for (int i = 0; i < Model.Count; i++)
{
    <tr class="table-row d-flex flex-column d-sm-table-row">
        <td class="d-table-cell d-sm-none">
            <p class="m-0 fw-bold text-center" onclick="Collapse(this)">@Model[i].NewName</p>
        </td>
        <td class="d-none d-sm-table-cell">
            <div class="input-group">
                <span class="input-group-text text-center w-50 d-inline d-sm-none border-0">Version</span>
                <input class="form-control form-control-sm entry entry-nofocus rounded text-center text-sm-start" hidden="hidden" asp-for="@Model[i].Id">
                <p class="m-0 section w-100 align-self-center text-center text-sm-start">@Model[i].Id</p>
            </div>
        </td>
        <td class="editable-field d-none d-sm-table-cell">
            <div class="input-group">
                <span class="input-group-text text-center w-50 d-inline d-sm-none border-0">Version</span>
                <input class="form-control form-control-sm entry entry-nofocus rounded text-center text-sm-start" hidden="hidden" asp-for="@Model[i].OldName">
                <p class="m-0 section w-100 align-self-center text-center text-sm-start">@Model[i].OldName</p>
            </div>
        </td>
        <td class="editable-field d-none d-sm-table-cell">
            <div class="input-group">
                <span class="input-group-text text-center w-50 d-inline d-sm-none border-0">Version</span>
                <input class="form-control form-control-sm entry entry-nofocus rounded text-center text-sm-start" hidden="hidden" asp-for="@Model[i].NewName">
                <p class="m-0 section w-100 align-self-center text-center text-sm-start">@Model[i].NewName</p>
            </div>
        </td>
        <td class="icon-cell text-center align-middle d-none d-sm-table-cell">
            <i class="fa fa-pen-alt text-secondary cursor-pointer"></i>
            <i class="fa fa-check-circle text-success cursor-pointer d-none"></i>
        </td>
        <td class="icon-cell text-center align-middle d-none d-sm-table-cell">
            <i id="@Model[i].Id" class="fa fa-trash-alt row-eraser text-danger cursor-pointer"></i>
            <i class="fa fa-times-circle text-danger cursor-pointer d-none"></i>
        </td>
    </tr>
}