@model ImportPluginsModel
@{
    ViewData["Title"] = "Settings";
    ViewData["ActivePage"] = ManageSettingsNav.ImportPlugins;
}

<h2>Settings</h2>
<h4>Change site settings</h4>
<hr class="w-100">
<div class="row d-flex" id="settings-page">
    <partial name="_SettingsNavPartial" />
    <div class="col-12 col-md-9" id="settings-details-container">
        <div class="settings-details">
            <h4>Import plugins</h4>
            <form method="post" class="mt-3" enctype="multipart/form-data" id="importFileForm">
                <div class="mb-2">
                    <input asp-for="ImportedFile" type="file" class="form-control" />
                    <span asp-validation-for="ImportedFile" class="text-danger"></span>
                </div>
                <button onclick="javascript: ImportPlugins()" type="button" class="btn btn-outline-secondary">Import</button>
            </form>
        </div>
    </div>
</div>
<div id="modalContainer"></div>

<script src="~/js/ImportPluginsScript.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
