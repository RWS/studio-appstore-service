@model PluginVersion

<div id="pluginVersionContainer">
    <input hidden asp-for="@Model.IsPrivatePlugin" value="true" />
    <input hidden asp-for="@Model.Id" />
    <h6 class="mb-3 ml-lg-3">@Model.VersionName</h6>
    <div id="versionDetails" class="m-0 ml-lg-3">
        <input hidden asp-for="@Model.VersionName" />
        <input hidden asp-for="@Model.TechnicalRequirements" />
        <input hidden asp-for="@Model.SelectedProduct.Id" />
        <input hidden asp-for="@Model.SelectedProduct.ProductName" />
        <input hidden asp-for="@Model.SelectedProduct.ParentProductID" />
        <input hidden asp-for="@Model.SelectedProduct.MinimumStudioVersion" />

        <div class="d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 align-self-center form-label" asp-for="@Model.VersionNumber">Version Number <span class="text-danger">*</span></label>
            <input asp-for="@Model.VersionNumber" class="form-control" />
        </div>
        <div class="d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 align-self-center form-label" asp-for="@Model.MinimumRequiredVersionOfStudio">Minimum Studio Version <span class="text-danger">*</span></label>
            <input asp-for="@Model.MinimumRequiredVersionOfStudio" class="form-control" />
        </div>
        <div class="d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 align-self-center" asp-for="@Model.DownloadUrl">Download URL <span class="text-danger">*</span></label>
            <input asp-for="@Model.DownloadUrl" class="form-control" />
        </div>
        <div class="form-check d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 form-check-label" asp-for="@Model.IsNavigationLink">Is navigation link</label>
            <input asp-for="@Model.IsNavigationLink" type="checkbox" class="m-0 align-self-center p-3" />
        </div>
        <div class="form-check d-flex align-content-center col-12 p-0 mb-3">
            <label class="col-4 m-0 form-check-label" asp-for="@Model.AppHasStudioPluginInstaller">Has plugin extension</label>
            <input asp-for="@Model.AppHasStudioPluginInstaller" type="checkbox" class="m-0 align-self-center p-3" />
        </div>
        <div class="d-flex align-content-center col-12 p-0">
            <label class="col-4 m-0 align-self-center form-label" asp-for="@Model.SelectedProductId">Product <span class="text-danger">*</span></label>
            @if (Model.IsNewVersion)
            {
                <select asp-for="@Model.SelectedProductId" asp-items="@Model.SupportedProductsListItems" class="form-select"></select>
            }
            else
            {
                <input disabled value="@Model.SelectedProduct.ProductName" class="form-control" />
            }

        </div>
    </div>

</div>
