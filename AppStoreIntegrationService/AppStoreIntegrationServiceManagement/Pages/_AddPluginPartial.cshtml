@model PrivatePlugin;

<div class="modal fade" id="addPluginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add new app</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form method="post" asp-page="Add" asp-page-handler="AddPlugin">
                <div class="modal-body">
                    <div class="d-flex align-content-center mb-3">
                        <label class="col-4 m-0 align-self-center form-label" asp-for="@Model.Name">Name <span class="text-danger">*</span></label>
                        <input asp-for="@Model.Name" class="form-control" />
                    </div>
                    <div class="d-flex align-content-center">
                        <label class="col-4 m-0 align-self-center form-label" asp-for="@Model.NewVersionNumber">Version number <span class="text-danger">*</span></label>
                        <input asp-for="@Model.NewVersionNumber" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn pa-admin-success-btn">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
