@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <meta name="viewport" content="width=device-width" , initial-scale="1" shrink-to-fit="no">
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/configtool.css" />
</head>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 col-md-7 col-lg-5 rounded p-4 bg-light">
            <section>
                <form id="account" method="post">
                    <h4 style="text-align: left">Sign in</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary add-pluginBtn w-100">Sign in</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
