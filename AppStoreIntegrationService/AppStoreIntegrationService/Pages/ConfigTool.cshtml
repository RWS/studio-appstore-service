@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AppStoreIntegrationService.ConfigToolModel
@{
    ViewData["Title"] = "ConfigTool";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/configtool.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    
    <style>
        .focusWhite:focus {
            background-color: white;
        }
    </style>
</head>

<body onload="javascript: CheckForActiveFilters()">
    <div id="configToolPage" class="container">
        <div class="align-left-filter-newapp row card-actions">
            <div>
                <select id="status" class="filter-box filter-selectmenu filter-searcharrow" onchange="javascript: ApplyFilters('status', 'search')">
                    <option value="2" hidden selected>Status</option>
                    <option value="0">Active</option>
                    <option value="1">Inactive</option>
                </select>
                <input id="search" class="filter-searchbar" placeholder="Search plugin by name..." onkeydown="javascript: ApplyFiltersOnEnterKey()">
                <button id="applyFilters" class="filter-searchicon" onclick="javascript: ApplyFilters('search', 'status')"><i class="fas fa-search"></i></button>
            </div>
            <button type="button" onclick="javascript: ShowNewPluginModal()" class="btn btn-secondary add-pluginBtn"><i class="fas fa-puzzle-piece" style="margin-right:10px"></i>New App</button>
        </div>
        <div class="filter-activefilters">
            <label id="clearAllFilter" class="delete-filter">
                <i class="fas fa-times-circle delete-filter-img" onclick="javascript: RedirectTo('/ConfigTool','/configtool')"></i>
                <label class="filter-current-label">Clear all</label>
            </label>
            <label id="clearStatusFilter" class="delete-filter">
                <i class="fas fa-times-circle delete-filter-img" onclick="javascript: DeleteFilter('status')"></i>
                <label id="labelStatusFilter" class="filter-current-label"></label>
            </label>
            <label id="clearSearchFilter" class="delete-filter">
                <i class="fas fa-times-circle delete-filter-img" onclick="javascript: DeleteFilter('search')"></i>
                <label id="labelSearchFilter" class="filter-current-label"></label>
            </label>
        </div>
        <div class="row align-items-center">
            <input hidden asp-for="@Model.Id" id="selectedPluginId" />
            <input hidden asp-for="@Model.Name" id="selectedPluginName" />

            @foreach (var plugin in Model.PrivatePlugins)
            {
                <div class="col-12 col-md-4 col-lg-3 p-0 card-container mb-4 d-flex justify-content-center">
                    <div class="card card-item @Html.Raw(@plugin.Inactive ? "card-item-inactive" : "")">
                        <div class="img-container">
                            <img class="img-item" src="@plugin.IconUrl" asp-append-version="true">
                        </div>
                        <div class="card-body card-body-flex">
                            <div class="card-title">@plugin.Name</div>
                            <div class="card-actions-alignment card-actions">
                                <label class="card-status">@Html.Raw(@plugin.Inactive ? "Inactive" : "")</label>
                                <div>
                                    <a class="focusWhite" asp-page="Edit" asp-route-Id="@plugin.Id" id="edit-button"><i class="fas fa-pencil-alt pencil-color"></i></a>
                                    <a onclick="javascript: ShowConfirmationModal('@plugin.Id','@plugin.Name')" id="delete-button" style="cursor:pointer"><i class="far fa-trash-alt"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div id="addModalContainer"></div>
        <div id="modalContainer"></div>
    </div>
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/configToolScripts.js"></script>
</body>
</html>


