@model AppStoreIntegrationService.Model.NameMapping

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<tr class="table-row" id="newNameMappingRow">
    <td style="vertical-align: middle;">
        <div>
            <input hidden asp-for="@Model.Id" />
            <p class="m-0">@Model.Id</p>
        </div>
    </td>
    <td class="icon-cell"><input class="form-control form-control-sm" asp-for="@Model.NewName" /></td>
    <td class="icon-cell"><input class="form-control form-control-sm" asp-for="@Model.OldName" /></td>
    <td class="icon-cell"><i onclick="AddNewNameMapping()" class="fa fa-check-circle"></i></td>
    <td class="icon-cell"><i onclick="CloseNewNameMappingForm()" class="fa fa-plus-circle custom-cross"></i></td>
</tr>