@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    btn:focus, a:focus {
        background-color: #2aa65b;
        border: #2aa65b;
    }
</style>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a onclick="javascript: RedirectTo('/ConfigTool','@ViewContext.ActionDescriptor.DisplayName.ToLower()')" style="cursor: pointer" class="text-white nav-link">Plugins List</a>
        </li>
        @if (User.IsInRole("Administrator"))
        {
            <li class="nav-item">
                <a onclick="javascript: RedirectTo('/Settings','@ViewContext.ActionDescriptor.DisplayName.ToLower()')" style="cursor: pointer" class="text-white nav-link">Settings</a>
            </li>
        }

        <li class="nav-item">
            <a onclick="javascript: RedirectTo('/Identity/Account/Manage','@ViewContext.ActionDescriptor.DisplayName.ToLower()')"
               id="manage" class="nav-link text-white" title="Manage">Hello @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/configtool", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white">Sign out</button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
        </li>
    }
</ul>
