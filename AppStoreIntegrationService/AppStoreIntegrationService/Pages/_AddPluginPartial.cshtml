@model AppStoreIntegrationService.Model.PrivatePlugin;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="modal fade" id="addPluginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add new app</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form method="post" asp-page="Add" asp-page-handler="AddPlugin">
                <div class="modal-body">
                    <div style="display:flex">
                        <div class="details-lbl-container">
                            <label class="details-lbl" asp-for="@Model.Name">Name <span class="field-validation-error">*</span></label>
                            <label class="details-lbl" asp-for="@Model.NewVersionNumber">Version Number <span class="field-validation-error">*</span></label>
                        </div>

                        <div class="details-input-container">
                            <input asp-for="@Model.Name" class="form-control col-sm-7 details-input" />
                            <input asp-for="@Model.NewVersionNumber" class="form-control col-sm-7 details-input" />
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" style="width:75px" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-secondary add-pluginBtn" style="margin-bottom:0;width:75px">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
