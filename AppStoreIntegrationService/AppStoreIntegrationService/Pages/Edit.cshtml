@page "{id:min(1)}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AppStoreIntegrationService.EditModel
@{
    ViewData["Title"] = "Edit";
}

<partial name="_HeaderPartial" />

<div class="row m-3" id="editFile">
    <div class="col-12 p-0 pl-3 p-lg-2 col-lg-4">
        <div class="image-container-details">
            <img class="details-img-item" src="@Model.PrivatePlugin.IconUrl" asp-append-version="true">
        </div>
        <h5 class="plugin-title">@Model.PrivatePlugin.Name</h5>
        <div class="d-flex">
            <h6 class="col-11 p-0">Versions</h6>
            <a onclick="javascript: AddNewVersion()" class="new-version-button col-1 text-right"> <i class="fas fa-plus"></i></a>
        </div>
        <div>
            <partial name="_PluginVersionPartial" model="@Model.PrivatePlugin.Versions" />
        </div>
    </div>

    <div class="col-12 col-lg-8 border-container">

        <form method="post" class="mt-3" id="form" onsubmit="return false">
            <input hidden asp-for="@Model.PrivatePlugin.Id" />
            <input hidden asp-for="@Model.SelectedVersionId" id="selectedVersionId" />
            @for (int i = 0; i < Model.Categories.Count; i++)
            {
                <input hidden asp-for="@Model.Categories[i].Id" />
                <input hidden asp-for="@Model.Categories[i].Name" />
                <input hidden asp-for="@Model.Categories[i].ParentCategoryID" />
            }
            <div class="row">
                <div class="form-group d-flex align-content-center col-12 p-0">
                    <label class="col-4 m-0 align-self-center" asp-for="PrivatePlugin.Name">Plugin Name <span class="field-validation-error">*</span></label>
                    <input asp-for="PrivatePlugin.Name" class="form-control col-8" />
                    <span asp-validation-for="PrivatePlugin.Name"></span>
                </div>
                <div class="form-group d-flex align-content-center col-12 p-0">
                    <label class="col-4 m-0 align-self-center" asp-for="PrivatePlugin.IconUrl">Icon url <span class="field-validation-error">*</span></label>
                    <input asp-for="PrivatePlugin.IconUrl" class="form-control col-8" />
                    <span asp-validation-for="PrivatePlugin.IconUrl"></span>
                </div>
                <div class="form-group d-flex align-content-center col-12 p-0">
                    <label class="col-4 m-0 align-self-center" asp-for="PrivatePlugin.DeveloperName">Developer </label>
                    <input asp-for="PrivatePlugin.DeveloperName" class="form-control col-8" />
                    <span asp-validation-for="PrivatePlugin.DeveloperName"></span>
                </div>
                <div class="form-group d-flex align-content-center col-12 p-0">
                    <label class="col-4 m-0 align-self-center" asp-for="PrivatePlugin.Description">Description <span class="field-validation-error">*</span></label>
                    <textarea asp-for="PrivatePlugin.Description" class="form-control col-8"></textarea>
                    <span asp-validation-for="PrivatePlugin.Description"></span>
                </div>
                <div class="form-group d-flex align-content-center col-12 p-0">
                    <label class="col-4 m-0 align-self-center" asp-for="PrivatePlugin.Categories">Plugin categories </label>
                    <select class="form-control col-8" multiple="multiple" asp-for="SelectedCategories" asp-items="Model.CategoryListItems"></select>
                </div>
                <div class="form-check d-flex align-content-center col-12 p-0 mb-3">
                    <label class="col-4 m-0" asp-for="PrivatePlugin.PaidFor">Paid for</label>
                    <input asp-for="PrivatePlugin.PaidFor" type="checkbox" class="m-0 align-self-center p-3" />
                </div>
            </div>

            <div id="pluginVersionContainer">@* used to render the selected version html *@</div>
            <div id="modalContainer"></div>
            <button type="button" onclick="javascript: SavePlugin()" class="btn btn-primary add-pluginBtn ml-lg-3">Save</button>
        </form>
    </div>
</div>

<script src="~/js/EditScript.js"></script>
