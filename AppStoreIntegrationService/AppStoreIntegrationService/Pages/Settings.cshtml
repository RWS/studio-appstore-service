@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AppStoreIntegrationService.Pages.Settings
@{
    ViewData["Title"] = "Settings";
}
<head>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <style>
        .nav-pills .nav-link.active {
            color: white;
            background-color: #28b059;
        }

        .option:focus {
            background-color: white;
        }

        .nav-item:hover {
            cursor: pointer;
        }

    </style>
</head>

<h2>Settings</h2>
<h4>Change site settings</h4>
<hr class="w-100">
<div class="row d-flex" id="settings-page">
    <div class="col-12 col-md-3">
        <ul class="nav nav-pills flex-column" id="settings-navbar">
            <li class="nav-item"><a class="nav-link" href="#0">Set site name</a></li>
            <li class="nav-item"><a class="nav-link" href="#1">Import plugins</a></li>
            <li class="nav-item"><a class="nav-link" href="#2">Export plugins</a></li>
            <li class="nav-item"><a class="nav-link active" href="#3">Plugin name mapping</a></li>
        </ul>
    </div>
    <div class="col-12 col-md-9" id="settings-details-container">
        <div class="settings-details d-none">
            <h5>Set site name</h5>
            <div>
                <form method="post" class="mt-3">
                    <input asp-for="@Model.SiteName" value="@Model.SiteName" class="form-control mb-2" />
                    <button type="submit" asp-page-handler="SaveSiteName" class="btn btn-success">Set</button>
                </form>
            </div>
        </div>
        <div class="d-none settings-details">
            <h5>Import plugins</h5>
            <form method="post" class="mt-3" enctype="multipart/form-data" id="import-file-form" onsubmit="return false;">
                <input asp-for="@Model.ImportedFile" type="file" class="form-control mb-2" />
                <button type="button" onclick="javascript: ImportFile()" class="btn btn-outline-secondary">Import</button>
            </form>
        </div>
        <div class="d-none settings-details">
            <h5>Export plugins</h5>
            <form method="post" class="mt-3">
                <input type="submit" class="btn btn-outline-secondary" asp-page-handler="ExportPlugins" value="Export" />
            </form>
        </div>
        <div class="settings-details" id="namesMapping">
            <h5>Plugin names mapping</h5>
            <form method="post" onsubmit="return false">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr class="table-head-row">
                            <th>Id</th>
                            <th>Old Name</th>
                            <th>New Name</th>
                            <td class="icon-cell"><i class="fa fa-plus-circle"></i></td>
                            <td class="icon-cell"><i class="fa fa-trash-alt"></i></td>
                        </tr>
                    </thead>
                    <tbody class="table-body">
                        <partial name="_NamesMappingPartial" model="@Model.NamesMapping"></partial>
                    </tbody>
                    <tbody id="newNameMappingPartial">
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>
<div id="modalContainer"></div>

<script src="~/js/configToolScripts.js"></script>

<script>
    window.onload = () => {
        LoadSettingsPage();
    }
</script>


