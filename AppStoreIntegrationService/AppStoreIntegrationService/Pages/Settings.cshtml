    <div class="border rounded p-3 mb-3">
        <h5 class="settings-field" style="cursor: pointer"><i class="fa fa-caret-down mr-2"></i>Set site name</h5>
        <div class="d-none settings-field-details">
            <form method="post" class="mt-3">
                <input asp-for="@Model.SiteName" value="@Model.SiteName" class="form-control mb-2" />
                <button type="submit" asp-page-handler="SaveSiteName" class="btn btn-success">Set</button>
            </form>
        </div>
    </div>

    <div class="border rounded p-3 mb-3">
        <h5 class="settings-field" style="cursor: pointer"><i class="fa fa-caret-down mr-2"></i>Import Plugins configuration</h5>
        <div class="d-none settings-field-details">
            <form method="post" enctype="multipart/form-data" id="import-file-form" onsubmit="return false;">
                <input asp-for="@Model.ImportedFile" type="file" class="form-control mb-2" />
                <button type="button" onclick="javascript: ImportFile()" class="btn btn-outline-secondary">Import</button>
                <div id="modalContainer"></div>
            </form>
        </div>
    </div>

    <div class="border rounded p-3">
        <h5 class="settings-field" style="cursor: pointer"><i class="fa fa-caret-down mr-2"></i>Export Plugins configuration</h5>
        <div class="d-none settings-field-details">
            <form method="post">
                <input type="submit" class="btn btn-outline-secondary" asp-page-handler="ExportPlugins" value="Export" />
            </form>
        </div>
    </div>


</div>

<script src="~/js/configToolScripts.js"></script>


