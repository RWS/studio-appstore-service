@page
@model AppStoreIntegrationService.Pages.Settings
@{
    ViewData["Title"] = "Settings";
}

<div class="row d-flex flex-column">
    <div class="border rounded p-3 mb-3">
        <h5 class="settings-field" style="cursor: pointer">Set site name</h5>
        <div class="d-none settings-field-details">
            <form method="post" class="mt-3" id="set-name-form" onsubmit="return false">
                <input asp-for="@Model.SiteName" class="form-control mb-2" />
                <button type="button" onclick="javascript: SaveSiteName()" class="btn btn-success">Set</button>
            </form>
        </div>
    </div>

    <div class="border rounded p-3 mb-3">
        <h5 class="settings-field" style="cursor: pointer">Import Plugins configuration</h5>
        <div class="d-none settings-field-details">
            <form method="post" enctype="multipart/form-data" id="form" onsubmit="return false;">
                <input asp-for="@Model.ImportedFile" type="file" class="form-control mb-2" />
                <button type="button" onclick="javascript: ImportFile()" class="btn btn-outline-secondary">Import</button>
                <div id="modalContainer"></div>
            </form>
        </div>
    </div>

    <div class="border rounded p-3">
        <h5 class="settings-field" style="cursor: pointer">Export Plugins configuration</h5>
        <div class="d-none settings-field-details">
            <button type="button" onclick="javascript: ExportFile()" class="btn btn-outline-secondary">Export</button>
        </div>
    </div>


</div>

<script src="~/js/configToolScripts.js"></script>


