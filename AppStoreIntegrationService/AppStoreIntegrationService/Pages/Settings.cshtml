@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AppStoreIntegrationService.Pages.Settings
@{
    ViewData["Title"] = "Settings";
}
<head>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>

<div class="row d-flex flex-column">
    @*<h2>Settings</h2>
    <h4>Change site settings</h4>
    <hr class="w-100">
    <div class="col-3">
    <ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class="nav-link option" id="profile" asp-page="./Index">Profile</a></li>
    <li class="nav-item"><a class="nav-link option" id="change-password" asp-page="./ChangePassword">Password</a></li>
    <li class="nav-item"><a class="nav-link option" asp-page="../Register">Add another user</a></li>
    </ul>
